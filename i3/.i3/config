####################
# SUSPEND & LOCKER
####################

# Suspend and more
set $Locker locker && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
bindsym XF86ScreenSaver exec $Locker
bindsym XF86Sleep exec $Locker && systemctl suspend, mode "default"
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -inc 5

# Assign
for_window [class="Spotify"] move to workspace 10
assign [class="Spotify"] 10
assign [class="Slack"] 9
assign [class="Zeal"] 8

# Spotify
# Play/Pause
bindsym $mod+o exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# Next
bindsym $mod+p exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# Previous
bindsym $mod+i exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

# Change layout
bindsym $mod+q exec ~/bin/change_layout

# Volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-mute 0 false ; exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-mute 0 false ; exec pactl set-sink-volume 0 -5%

# Mute
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
