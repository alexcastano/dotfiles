#!/bin/sh

systemctl status bluetooth | grep Running > /dev/null

if [ $? -ne 0 ]; then
  sudo systemctl start bluetooth
fi

rfkill unblock bluetooth
bluetoothctl power on
bluetoothctl agent on
bluetoothctl default-agent

if [ $1 = "sony" ]; then
  bluetoothctl connect 58:18:62:17:69:14
elif [ $1 = "bose" ]; then
  bluetoothctl connect 78:2B:64:89:AB:E6
elif [ $1 = "soundbar" ]; then
  bluetoothctl connect 14:7F:67:23:D2:4B
else
  echo "no argument"
fi

# Trigger immediate i3blocks bluetooth update
pkill -RTMIN+10 i3blocks


# # enable bluetooth
# sudo systemctl start bluetooth

# ~/bin/_connect-bt
# # run the program bluez
# echo -e 'power on\nconnect \t \nquit' | bluetoothctl
